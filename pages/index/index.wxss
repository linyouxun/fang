/**index.wxss**/
.header {
  height: 100rpx;
  border-bottom: 1rpx solid #efefef;
  box-sizing: border-box;
  position: relative;
}
.red {
  background-color: red;
}
#map {
  width: 100%;
}
.get-order {
  font-size: 36rpx;
  height: 100rpx;
  line-height: 100rpx;
  vertical-align: center;
}
.loading-img {
  width: 32rpx;
  height: 32rpx;
  vertical-align: center;
  -webkit-animation:spinner .8s infinite linear;
  animation:spinner .8s infinite linear
}
/*动画*/
@-webkit-keyframes spinner{0%{-webkit-transform:rotate(0deg);transform:rotate(0deg)}
    50%{-webkit-transform:rotate(180deg);transform:rotate(180deg)}
    100%{-webkit-transform:rotate(360deg);transform:rotate(360deg)}
}@keyframes spinner{0%{-webkit-transform:rotate(0deg);transform:rotate(0deg)}
     50%{-webkit-transform:rotate(180deg);transform:rotate(180deg)}
     100%{-webkit-transform:rotate(360deg);transform:rotate(360deg)}
 }
.my-order {
  display: inline-block;
}
.left {
  position: absolute;
  left: 0;
  top: 0;
}
.userinfo {
  width: 100rpx;
  display: inline-block;
}

.userinfo .img {
  display: inline-block;
  line-height: 100rpx;
  width: 70rpx;
  height: 70rpx;
  box-sizing: border-box;
  border-radius: 50rpx;
  margin: 15rpx;
  overflow: hidden;
  vertical-align: bottom;
}
.order {
  display: inline-block;
  line-height: 100rpx;
  vertical-align: bottom;
  font-size: 32rpx;
}

.center {
  text-align: center;
  line-height: 100rpx;
}

.userinfo button {
  width: 100%;
  height: 100%;
  font-size: 20rpx;
}

.moreInfo {
  width:80rpx;
  height:40rpx;
  margin-top:15rpx;
  transform: rotate(180deg);
  transition: transform 1s;
  -moz-transition:transform 1s; /* Firefox 4 */
  -webkit-transition:transform 1s; /* Safari and Chrome */
  -o-transition:transform 1s; /* Opera */
}

.bottom {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  border-radius: 10rpx;
  transition: bottom 1s;
  -moz-transition:bottom 1s; /* Firefox 4 */
  -webkit-transition:bottom 1s; /* Safari and Chrome */
  -o-transition:bottom 1s; /* Opera */
}
.b-header {
  margin-top: 5rpx;
  height: 75rpx;
  line-height: 75rpx;
  text-align: center;
  box-shadow: 0px -5rpx 5rpx #999;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  border-bottom: 1rpx solid #efefef;
}
.flex {
  display: flex;
  line-height: 80rpx;
  height: 80rpx;
  border-bottom: 1rpx solid #efefef;
  font-size: 30rpx;
  color: #666;
  box-sizing: border-box;
}
.flex-1 {
  flex: 1;
  line-height: 80rpx;
  height: 80rpx;
  text-align: center;
}
.flex-1 input {
  line-height: 80rpx;
  height: 80rpx;
}

.more-detail {
  position: absolute;
  right: 0rpx;
  top: 50%;
  transform: translateY(-50%);
  color: #666;
  width: 30rpx;
  font-size: 26rpx;
  line-height: 40rpx;
  height:  200rpx;
  padding: 80rpx 10rpx 80rpx 10rpx;
  /* background-color: red; */
  transition: all 1s;
}

.hide-detail {
  right: -50rpx;
}
.bottom2 {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  width: 100%;
  background-color: #ff9a14;
  font-size: 32rpx;
  line-height: 80rpx;
  height: 80rpx;
  text-align: center;
  color: #fff;
  z-index: 9;
}

.model {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: #00000099;
  z-index: 9999;
}
.m-content {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background-color: #fff;
  width: 640rpx;
  border-radius: 10rpx;
}

.m-title {
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  border-bottom: 1rpx solid #ccc;
}
.m-tip {
  color: #666;
  font-size: 28rpx;
  padding: 40rpx 40rpx;
  border-bottom: 1rpx solid #ccc;
}

.m-button {
  color: #1aad19;
  height: 100rpx;
  line-height: 100rpx;
}

.hide {
  display: none;
}