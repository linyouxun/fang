/**index.wxss**/
.header {
  height: 100rpx;
  border-bottom: 1rpx solid #efefef;
  box-sizing: border-box;
  position: relative;
}
#map {
  width: 100%;
}

.left {
  position: absolute;
  left: 0;
  top: 0;
}
.userinfo {
  width: 100rpx;
  display: inline-block;
}

.userinfo .img {
  display: inline-block;
  line-height: 100rpx;
  width: 70rpx;
  height: 70rpx;
  box-sizing: border-box;
  border-radius: 50rpx;
  margin: 15rpx;
  overflow: hidden;
  vertical-align: bottom;
}
.order {
  display: inline-block;
  line-height: 100rpx;
  vertical-align: bottom;
  font-size: 32rpx;
}

.center {
  text-align: center;
  line-height: 100rpx;
}

.userinfo button {
  width: 100%;
  height: 100%;
  font-size: 20rpx;
}
.bottom {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  border-radius: 10rpx;
  transition: bottom 1s;
  -moz-transition:bottom 1s; /* Firefox 4 */
  -webkit-transition:bottom 1s; /* Safari and Chrome */
  -o-transition:bottom 1s; /* Opera */
}
.b-header {
  margin-top: 5rpx;
  height: 75rpx;
  line-height: 75rpx;
  text-align: center;
  box-shadow: 0px -5rpx 5rpx #999;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  border-bottom: 1rpx solid #efefef;
}
.flex {
  display: flex;
  line-height: 80rpx;
  height: 80rpx;
  border-bottom: 1rpx solid #efefef;
  font-size: 30rpx;
  color: #666;
  box-sizing: border-box;
}
.flex-1 {
  flex: 1;
  line-height: 80rpx;
  height: 80rpx;
  text-align: center;
}
.flex-1 input {
  line-height: 80rpx;
  height: 80rpx;
}

.bottom2 {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  width: 100%;
  background-color: #ff9a14;
  font-size: 32rpx;
  line-height: 80rpx;
  height: 80rpx;
  text-align: center;
  color: #fff;
  z-index: 9;
}