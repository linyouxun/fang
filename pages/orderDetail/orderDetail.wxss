/* pages/orderDetail/orderDetail.wxss */
page {
  background-color: #efefef;
}
.head {
  background-color: #fff;
  font-size: 28rpx;
}
.status {
  color: #fff;
  background-color: #ff6300;
  margin: 0 20rpx;
  width: 710rpx;
  padding-bottom: 20rpx;
}
.center {
  text-align: center;
  padding: 25rpx 0 0;
}

.status-img {
  height: 50rpx;
  width: 50rpx;
  display: inline-block;
  vertical-align: text-top;
  margin: 0 10rpx;
}

.order-status {
  display: inline-block;
  border-radius: 25rpx;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 24rpx;
  border: 1px solid #fff;
  box-sizing: border-box;
  width: 120rpx;
  text-align: center;
  color: #fff;
  vertical-align: text-top
}

.status-tip {
  height: 100rpx;
  line-height: 100rpx;
  font-size: 26rpx;
  text-align: center;
  background-color: #fff;
  color: #000;
  width: 670rpx;
  margin-left: 20rpx;
  border-radius: 10rpx;
  margin-top: 30rpx;
}

.price {
  color: #ff6300;
  line-height: 70rpx;
  height: 70rpx;
  font-size: 28rpx;
  font-weight: bold;
}

.list {
  padding: 20rpx;
}
.item {
  background-color: #fff;
  display: flex;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;border-bottom: 2rpx solid #eee;
}
.item-name {
  width: 200rpx;
  padding-left: 20rpx;
  color: #666;
}
.item-price {
  color: #111;
}